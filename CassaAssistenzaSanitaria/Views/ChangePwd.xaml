<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CassaAssistenzaSanitaria.Views.ChangePwd"
    Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Username:" FontSize="Medium" />
            <Entry Text="{Binding Login.Username}" FontSize="Small"/>
            <Label Text="Old Password:" FontSize="Medium" />
            <Entry Text="{Binding Login.OldPassword}" IsPassword="True" FontSize="Small"/>
            <Label Text="New Password:" FontSize="Medium" />
            <Entry Text="{Binding Login.NewPassword}" IsPassword="True" FontSize="Small"/>
            <Button Text="Cambia Password" Clicked="Submit_Clicked"/>  
            <Label Text="{Binding Esito}" FontSize="Small" TextColor="Red" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
